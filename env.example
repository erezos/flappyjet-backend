# ðŸš‚ FlappyJet Pro - Railway Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# Server Configuration
NODE_ENV=production
PORT=3000

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# CORS Configuration (your Flutter app domains)
ALLOWED_ORIGINS=https://flappyjet.pro,https://www.flappyjet.pro

# Apple App Store Configuration (for IAP validation)
APPLE_SHARED_SECRET=your-apple-shared-secret
APPLE_BUNDLE_ID=com.flappyjet.pro

# Google Play Store Configuration (for IAP validation)
GOOGLE_SERVICE_ACCOUNT_KEY=path/to/google-service-account.json
GOOGLE_PACKAGE_NAME=com.flappyjet.pro

# Analytics Configuration (optional)
ANALYTICS_API_KEY=your-analytics-api-key
ANALYTICS_ENDPOINT=https://analytics.flappyjet.pro

# Admin Configuration
ADMIN_API_KEY=your-admin-api-key-for-dashboard

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Feature Flags
ENABLE_ANTI_CHEAT=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Firebase Admin SDK for Push Notifications (Android only)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# CDN Configuration (for assets)
CDN_BASE_URL=https://cdn.flappyjet.pro
CDN_API_KEY=your-cdn-api-key

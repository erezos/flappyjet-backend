{
  "name": "flappyjet-backend",
  "version": "1.0.0",
  "description": "FlappyJet Pro - Production Railway Backend with 90%+ Test Coverage",
  "main": "server.js",
  "scripts": {
    "start": "node intermediate-server.js",
    "dev": "nodemon server.js",
    "deploy": "railway up",
    "build": "echo 'No build step required for Node.js'",
    "postinstall": "echo 'Production install complete'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "migrate": "node scripts/migrate.js",
    "migrate:production": "NODE_ENV=production node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "seed:production": "NODE_ENV=production node scripts/seed.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "precommit": "npm run lint && npm run test:ci",
    "health-check": "curl -f http://localhost:$PORT/health || exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "nock": "^13.5.0",
    "nodemon": "^3.0.2",

    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "jest",
      "security"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "keywords": [
    "flappyjet",
    "game-backend",
    "railway",
    "flutter",
    "leaderboard",
    "nodejs",
    "express",
    "postgresql",
    "jwt",
    "rest-api"
  ],
  "author": "FlappyJet Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flappyjet/backend"
  },
  "bugs": {
    "url": "https://github.com/flappyjet/backend/issues"
  },
  "homepage": "https://flappyjet.pro"
}

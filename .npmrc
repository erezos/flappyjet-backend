# Railway Production Configuration
# Force production mode
NODE_ENV=production
production=true
omit=dev
omit=optional

# Disable all optional and dev dependencies
optional=false
dev=false

# Disable package scripts that might cause issues
ignore-scripts=true

# Use faster install for production
prefer-offline=true
audit=false
fund=false
progress=false

# Disable git and other features that might cause issues
git=false

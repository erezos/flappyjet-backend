{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "services/**/*.js",
    "routes/**/*.js",
    "!**/node_modules/**"
  ],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "verbose": true,
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}

